<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="4"
    android:columnCount="2">

    <!-- Row 1: TextView (spans 2 columns) -->
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/look_at_my_gui"
        android:textSize="30dp"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"/>

    <!-- Row 2: Button and CheckBox -->
    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/click_here"
        android:layout_weight="1"
        android:layout_gravity="fill"/>

    <CheckBox
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/check_this_out"
        android:layout_gravity="fill"/>

    <!-- Row 3: ImageButton and Switch -->
    <ImageButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/flag"
        android:contentDescription="Flag"
        android:layout_gravity="fill"/>

    <Switch
        android:id="@+id/mySwitch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/switch_on_off"
        android:layout_gravity="fill"/>

    <!-- Row 4: EditText (spans 2 columns) -->
    <EditText
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_columnSpan="2"
        android:hint="@string/type_here"
        android:inputType="textPersonName"
        android:layout_gravity="fill"/>
</GridLayout>
